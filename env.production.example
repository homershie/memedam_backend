# 生產環境配置範例 - 迷因典
# 複製此文件為 .env 並填入正確的值

# 伺服器配置
NODE_ENV=production
PORT=4000

# 安全性配置
CORS_ORIGIN=https://www.memedam.com

# 前端URL
FRONTEND_URL=https://www.memedam.com

# MongoDB
MONGO_URI=mongodb://localhost:27017/MemeDam_dev
MONGO_DEV_URI=mongodb://localhost:27017/MemeDam_dev
MONGO_TEST_URI=mongodb://localhost:27017/MemeDam_test
MONGO_PROD_URI=mongodb://localhost:27017/MemeDam

# JWT
JWT_SECRET=your_very_secure_jwt_secret_key
JWT_EXPIRES_IN=7d

# Session 配置
SESSION_SECRET=your_very_secure_session_secret_key

# Render
RENDER_API_KEY=your_render_api_key
RENDER_SERVICE_ID=your_render_service_id

# REDIS
REDIS_ENABLED=true
REDIS_DB=0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://red-d2bdt195pdvs73clq8r0:6379

# Email 服務配置 (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@memedam.com
SENDGRID_FROM_NAME=迷因典團隊
TEST_EMAIL=homershie@gmail.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# OAuth 配置 - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.memedam.com/api/users/auth/google/callback
GOOGLE_BIND_REDIRECT_URI=https://api.memedam.com/api/users/bind-auth/google/callback

# OAuth 配置 - Facebook
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://api.memedam.com/api/users/auth/facebook/callback
FACEBOOK_BIND_REDIRECT_URI=https://api.memedam.com/api/users/bind-auth/facebook/callback

# Discord OAuth 配置
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://api.memedam.com/api/users/auth/discord/callback
DISCORD_BIND_REDIRECT_URI=https://api.memedam.com/api/users/bind-auth/discord/callback

# Twitter OAuth 配置
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_CLIENT_TYPE=confidential
TWITTER_REDIRECT_URI=https://api.memedam.com/api/users/auth/twitter/callback
TWITTER_BIND_REDIRECT_URI=https://api.memedam.com/api/users/bind-auth/twitter/callback
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_aoi_key
TWITTER_API_SECRET=your_twitter_api_secret

# Google服務帳戶金鑰
GOOGLE_APPLICATION_CREDENTIALS=etc/secrets/gcp-sa.json

# Google reCAPTCHA
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Ko-fi Webhook 配置
KOFI_VERIFICATION_TOKEN=your_kofi_verification_token