# 資料庫連接
DATABASE_URL=mongodb://localhost:27017/memedam

# JWT 設定
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=24h

# 伺服器設定
PORT=4000
NODE_ENV=development

# 前端 URL
FRONTEND_URL=http://127.0.0.1:5173

# Session 設定
SESSION_SECRET=your_session_secret_here

# Redis 設定 (可選，用於 session 儲存)
REDIS_URL=redis://localhost:6379

# Cloudinary 設定
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OAuth 設定 - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://127.0.0.1:4000/api/users/auth/google/callback
GOOGLE_BIND_REDIRECT_URI=http://127.0.0.1:4000/api/users/bind-auth/google/callback

# OAuth 設定 - Facebook
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_REDIRECT_URI=http://127.0.0.1:4000/api/users/auth/facebook/callback
FACEBOOK_BIND_REDIRECT_URI=http://127.0.0.1:4000/api/users/bind-auth/facebook/callback

# OAuth 設定 - Discord
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://127.0.0.1:4000/api/users/auth/discord/callback
DISCORD_BIND_REDIRECT_URI=http://127.0.0.1:4000/api/users/bind-auth/discord/callback

# OAuth 設定 - Twitter
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_CLIENT_TYPE=confidential
TWITTER_REDIRECT_URI=http://127.0.0.1:4000/api/users/auth/twitter/callback
TWITTER_BIND_REDIRECT_URI=http://127.0.0.1:4000/api/users/bind-auth/twitter/callback

# 注意：Twitter OAuth 2.0 建議使用 127.0.0.1 而不是 localhost 避免回調問題

# 電子郵件服務 (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# 電子郵件驗證設定
EMAIL_VERIFICATION_URL=http://127.0.0.1:5173/verify-email
PASSWORD_RESET_URL=http://127.0.0.1:5173/reset-password
